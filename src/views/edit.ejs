<%-include('partials/_header') %>
<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/editp/<%= task._id%>" method="POST">
                        <div class="form-group">
                            <input type="text" placeholder="Insert Title" name="title" class="form-control" value="<%=task.title%>">
                        </div>
                        <div class="form-group">
                            <textarea name="description"  cols="80" class="form-control" placeholder="Insert Description"><%=task.description%></textarea>
                        </div>
                        <button type="submit" class="btn btn-dark btn-block">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>